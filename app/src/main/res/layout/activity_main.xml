<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/mondayjj"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/cardPic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy Mother's Day Mom!"
        android:textSize="35sp"
        android:id="@+id/motherText"
        android:padding="20dp"
        android:fontFamily="cursive"
        android:textColor="@android:color/holo_red_dark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From, Natalman!"
        android:textSize="35sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/fromText"
        android:padding="20dp"
        android:fontFamily="cursive"
        android:textColor="@android:color/holo_red_dark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Since Day 1, you have always been there for me. I couldn't have asked for more! I love You Mom!"
        android:textSize="30sp"
        android:id="@+id/text"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:padding="20dp"
        android:textColor="#4A148C"
        android:background="#9A9A"
        android:fontFamily="sans-serif-light"/>

</RelativeLayout>